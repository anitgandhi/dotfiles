
# Custom prompt
LBLUE=$'\e[36;49m'
GREEN=$'\e[32;49m'
ORANGE=$'\e[33;49m'
YELLOW=$'\e[37;49m'
PINK=$'\e[31;49m'
DEFAULT=$'\e[39m'
 
function _git_prompt() {
    local git_status="`git status -unormal 2>&1`"
    if ! [[ "$git_status" =~ Not\ a\ git\ repo ]]; then
        # Check if there are changes to repo
        if [[ "$git_status" =~ nothing\ to\ commit ]]; then
            local gitcolour="nothing to commit:$YELLOW"
        elif [[ "$git_status" =~ Untracked\ files ]]; then
            local gitcolour="untracked:$PINK"
        else
            local gitcolour="branch:$LBLUE"
        fi
 
        # Print branch
        if [[ "$git_status" =~ On\ branch\ ([^[:space:]]+) ]]; then
            branch=${BASH_REMATCH[1]}
            test branch=' '
        else
            # Detached HEAD.  (branch=HEAD is a faster alternative.)
            branch="(`git describe --all --contains --abbrev=4 HEAD 2> /dev/null ||
                echo HEAD`)"
        fi
        echo -n "$gitcolour $branch"
    fi
}
 
function _prompt_command() {
    PS1='\n\[$PINK\]\u \[$LBLUE\]| \[$GREEN\]\w \[$LBLUE\]| \[$ORANGE\]`_git_prompt` \n\[$GREEN\]â†’ \[$DEFAULT \]'
}
 
export PROMPT_COMMAND=_prompt_command
